{
    "compilerOptions": {
        "outDir": "build",
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "downlevelIteration": true
    },
    "include": [
        "src",
        "src/components/controls/DateEdit.stories.tsx",
        "src/components/controls/SwitchControl.stories.tsx",
        "src/components/controls/TextEditControl.stories.tsx",
        "src/components/controls/Chooser.stories.tsx",
        "src/components/controls/TagsControl.stories.tsx",
        "src/components/controls/Form.stories.tsx"
    ],
    "exclude": ["node_modules", "build"]
}
